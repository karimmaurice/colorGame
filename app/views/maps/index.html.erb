<!--Header-->
<div style="margin-bottom:30px">
	<!--add new button-->
	<div><%= button_to "add map", new_map_path, :class => "btn btn-primary", :style => "float: right; margin:14px 14px 0 0", :method => :get%>
	</div>

	<h1>Maps</h1>
</div>
<!--Table-->
<div class="frame">
	<table class="table table-hover" style="margin-bottom:0">
		<thead>
			<tr>
				<th class="span3" style="color:#444">Name</th> 
				<th class="span3" style="color:#444">Number of Teams</th>
				<th class="span4" style="color:#444">Number of Locations</th>
				<th class="span2" style="color:#444">Manage</th>
			</tr>
		</thead>
		<tbody>
			<% @maps.each do |map| %>
				<tr>
					<%location_count = Location.where('map_id=?', map.id).count%>
					<td> <%= link_to map.name, map  %> </td>
					<td> <%= map.team_count  %> </td>
					<td> <%= location_count %> </td>
					<td> <%= link_to "edit", edit_map_path(map), :style => "margin-right: 5px"%> 
						 <%= link_to "del", map, :method => :delete, data: { confirm: 'Are you sure you want to delete this map?' } %> </td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>	

