<!--Header-->
<div style="margin-bottom:30px">
	<!--add new button-->
	<div><%= button_to "add challenge", new_challenge_path, :class => "btn btn-primary", :style => "float: right; margin:14px 14px 0 0", :method => :get%>
	</div>

	<h1>Challenges</h1>
</div>
<!--Table-->
<div class="frame">
	<table class="table table-hover" style="margin-bottom:0">
		<thead>
			<tr>
				<th class="span1" style="color:#444"></th>
				<th class="span3" style="color:#444">Name</th> 
				<th class="span3" style="color:#444">Points</th>
				<th class="span3" style="color:#444">Players</th>
				<th class="span2" style="color:#444">Manage</th>
			</tr>
		</thead>
		<tbody>
			<% @challenges.each do |challenge| %>
				<tr>
					<td><%= image_tag challenge.image.url, :style=>"width:35px" %></td>
					<td> <%= link_to challenge.name, challenge  %> </td>
					<td> <%= challenge.points %> </td>
					<td> <%= challenge.player_count %> </td>
					<td> <%= link_to "edit", edit_challenge_path(challenge), :style => "margin-right: 5px"%> 
						 <%= link_to "del", challenge, :method => :delete, data: { confirm: 'Are you sure you want to delete this challenge?' } %> </td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>	

