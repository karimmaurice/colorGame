<!DOCTYPE html>
<html>
<head>
  <title>Color Conqueror</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="shortcut icon" href="/assets/icon.ico">
</head>
<body>

	<div id="myNav" class="navbar navbar-fixed-top">
		<div class="container row-fluid">
			<%= render 'layouts/list' %>
        </div>
	</div>

	<div id="mainContainer">
		<div id="container">
			<% if flash[:notice] and flash[:notice] != "-1"%>
	        	<div class="alert alert-success fade in" style="margin:0 20px 10px 10px">
	        		<button class="close" data-dismiss="alert">x</button>
	            	<%= flash[:notice]%>
	          	</div>
		    <% end %>
		    <% if flash[:alert] and flash[:alert] != "-1"%>
		        <div class="alert alert-error fade in" style="margin:0 20px 10px 10px">
		        	<button class="close" data-dismiss="alert">x</button>
		          	<%= flash[:alert]%>
		        </div>
		    <% end %>

			<%= yield %>
		</div>
	</div>

</body>
</html>
