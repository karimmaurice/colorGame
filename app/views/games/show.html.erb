<!--Header-->
<div style="margin-bottom:30px">
	<h1><%= @game.name %></h1>
</div>
<!--Body-->
<div>
	<table class="table table-hover" style="margin-bottom:0">
		<thead>
			<tr>
				<th class="span6" style="color:#444">Property</th> 
				<th class="span6" style="color:#444">Value</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>Name</td>
				<td><%=@game.name%></td>
			</tr>
			<tr>
				<td>Game Admin</td>
				<td><%if @game.user%><%=@game.user.name%><%end%></td>
			</tr>
			<tr>
				<td>Pass Code</td>
				<td><%=@game.pass_code%></td>
			</tr>
			<tr>
				<td>Map</td>
				<td><%if @game.map%><%=@game.map.name%><%end%></td>
			</tr>
			<tr>
				<td>Overlay</td>
				<td><a href="<%=@game.image.url%>" target="_blank">view image</a></td>
			</tr>
			<%i = 0%>
			<%@locations.each do |location|%>
				<tr>
					<td><%= location.name%></td>
					<td><%if @locChallenges[i]%><%= @locChallenges[i].challenge.name%><%else%>(none)<%end%></td>
				</tr>
				<%i += 1%>
			<%end%>
			<%i = 1%>
			<%@teams.each do |team|%>
				<tr>
					<td>Team <%=i%></td>
					<td><%if team.name != ""%><%= team.name%><%else%>(none)<%end%></td>
				</tr>
				<%i += 1%>
			<%end%>
		</tbody>
	</table>
</div>
<%= link_to "Back", games_path, :class => "btn", :style => "margin: 20px 0"%>
<%= link_to "Edit", edit_game_path(@game), :class => "btn btn-primary", :style => "margin: 20px 5px"%>
	

