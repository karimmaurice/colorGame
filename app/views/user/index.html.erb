<!--Header-->
<div style="margin-bottom:30px">
	<!--add new button-->
	<div><%= button_to "add user", new_user_path, :class => "btn btn-primary", :style => "float: right; margin:14px 14px 0 0", :method => :get%>
	</div>

	<h1>Users</h1>
</div>
<!--Table-->
<div class="frame">
	<table class="table table-hover" style="margin-bottom:0">
		<thead>
			<tr>
				<th class="span3" style="color:#444">Name</th> 
				<th class="span7" style="color:#444">Email</th>
				<th class="span2" style="color:#444">Manage</th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user| %>
				<tr>
					<td> <%= link_to user.name, user  %> </td>
					<td> <%= user.email  %> </td>
					<td> <%= link_to "edit", edit_user_path(user), :style => "margin-right: 5px"%> 
						 <%= link_to "del", user, :method => :delete, data: { confirm: 'Are you sure you want to delete this user?' } %> </td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>	

